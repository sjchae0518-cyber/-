        ];

        let currentQuestion = 0;
        let answers = {};

        function renderQuestion(index) {
            const container = document.getElementById('questionsContainer');
            const question = questions[index];
            
            container.innerHTML = `
                <div class="question-section">
                    <div class="question-number">Q${question.number}</div>
                    <div class="question-text">${question.text}</div>
                    <div class="rating-scale">
                        ${question.options.map((option, i) => `
                            <div class="rating-option ${answers[index] === i ? 'selected' : ''}" onclick="selectRating(${index}, ${i})">
                                <input type="radio" id="q${index}_${i}" name="q${index}" value="${i}" ${answers[index] === i ? 'checked' : ''}>
                                <label for="q${index}_${i}" class="rating-label">
                                    <span class="rating-point">${option.point}점:</span> ${option.text}
                                </label>
                            </div>
                        `).join('')}
                    </div>
                    <div class="question-note">${question.note}</div>
                </div>
            `;

            updateProgress();
            updateButtons();
        }

        function selectRating(questionIndex, optionIndex) {
            answers[questionIndex] = optionIndex;
            document.getElementById(`q${questionIndex}_${optionIndex}`).checked = true;
            
            // 선택 스타일 업데이트
            document.querySelectorAll(`input[name="q${questionIndex}"]`).forEach(radio => {
                radio.parentElement.classList.remove('selected');
            });
            document.getElementById(`q${questionIndex}_${optionIndex}`).parentElement.classList.add('selected');
            
            updateProgress();
        }

        function updateProgress() {
            const answeredCount = Object.keys(answers).length;
            const totalCount = questions.length;
            const percentage = (answeredCount / totalCount) * 100;
            
            document.getElementById('progressText').textContent = `${answeredCount}/${totalCount}`;
            document.getElementById('progressFill').style.width = `${percentage}%`;
        }

        function updateButtons() {
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const submitBtn = document.getElementById('submitBtn');
            
            prevBtn.disabled = currentQuestion === 0;
            
            if (currentQuestion === questions.length - 1) {
                nextBtn.style.display = 'none';
                submitBtn.style.display = 'block';
            } else {
                nextBtn.style.display = 'block';
                submitBtn.style.display = 'none';
            }
        }

        function nextQuestion() {
            if (answers[currentQuestion] === undefined) {
                showToast('답변을 선택해주세요.');
                return;
            }
            
            if (currentQuestion < questions.length - 1) {
                currentQuestion++;
                renderQuestion(currentQuestion);
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        }

        function prevQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                renderQuestion(currentQuestion);
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        }

        function submitSurvey() {
            if (Object.keys(answers).length < questions.length) {
                showToast('모든 질문에 답변해주세요.');
                return;
            }
            
            showToast('설문이 제출되었습니다. 감사합니다!');
            
            // 실제로는 서버에 제출
            setTimeout(() => {
                // window.location.href = 'result-page.html';
            }, 1500);
        }

        function goHome() {
            if (Object.keys(answers).length > 0) {
                if (confirm('작성 중인 내용이 사라집니다. 홈으로 돌아가시겠습니까?')) {
                    showToast('홈으로 돌아갑니다.');
                    setTimeout(() => {
                        // window.location.href = 'index.html';
                    }, 1000);
                }
            } else {
                showToast('홈으로 돌아갑니다.');
                setTimeout(() => {
                    // window.location.href = 'index.html';
                }, 1000);
            }
        }

        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2000);
        }

        // 초기화
        document.addEventListener('DOMContentLoaded', function() {
            renderQuestion(currentQuestion);
        });
    </script>
</body>
</html>
