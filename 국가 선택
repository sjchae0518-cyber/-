export default function CountrySelector() {
  const [selected, setSelected] = useState(null);

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-4 bg-opacity-40" style={{backgroundColor: 'rgba(240, 249, 255, 0.4)'}}>
      <div className="w-full max-w-md">
        <div className="bg-white bg-opacity-60 backdrop-blur-md rounded-lg border border-gray-300 shadow-lg overflow-hidden">
          <div className="max-h-screen overflow-y-auto">
            {countries.map((country, idx) => (
              <button
                key={idx}
                onClick={() => setSelected(country)}
                className={`w-full px-4 py-2 text-left border-b border-gray-200 last:border-b-0 transition-all flex items-center gap-4 ${
                  selected?.ko === country.ko
                    ? 'bg-indigo-200 bg-opacity-70'
                    : 'hover:bg-indigo-100 hover:bg-opacity-50'
                }`}
              >
                <div>
                  <div className="font-semibold text-gray-800 text-sm">{country.ko}</div>
                  <div className="text-xs text-gray-600">{country.en}</div>
                  {country.local && <div className="text-xs text-gray-500">{country.local}</div>}
                </div>
              </button>
            ))}
          </div>
        </div>
      </div>
    </div>
  );
}
