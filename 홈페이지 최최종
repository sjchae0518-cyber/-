    <script>
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2000);
        }

        function makeCall(number) {
            showToast(`${number}ë¡œ ì „í™” ì—°ê²°í•©ë‹ˆë‹¤.`);
        }

        document.querySelectorAll('.grid-item').forEach(function(item) {
            item.addEventListener('click', function() {
                const issueTitle = this.querySelector('.grid-text').textContent.trim();
                showToast(`${issueTitle} ìƒì„¸ ì •ë³´ í˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.`);
            });
        });

        document.querySelector('.korean-section').addEventListener('click', function() {
            showToast('í•œêµ­ì–´ í•™ìŠµ í˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.');
        });

        document.querySelector('.chart-section').addEventListener('click', function() {
            showToast('ë…¸ë™ ì‹œê°„ ìƒì„¸ í˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.');
        });

        document.querySelectorAll('.top-icon').forEach(function(icon, index) {
            icon.addEventListener('click', function() {
                const labels = ['ì–¸ì–´ ì„¤ì •', 'ê³„ì •'];
                showToast(labels[index] + ' í˜ì´ì§€ë¡œ ì´ë™í•©ë‹ˆë‹¤.');
            });
        });
    </script>
