                          <button
                            key={optIdx}
                            onClick={() => handleButtonClick(option)}
                            className={`px-6 py-2 rounded-lg text-sm cursor-pointer transition-all ${
                              pressedButton === option ? 'bg-blue-400' : 'bg-blue-200 hover:bg-blue-300'
                            } ${msg.question ? '' : 'w-full text-left'}`}
