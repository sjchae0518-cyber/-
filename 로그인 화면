<body>
    <div class="container">
        <div class="logo-section">
            <div class="logo-title">Dom Dom</div>
            <div class="logo-subtitle">외국인 노동자 도우미 앱</div>
        </div>

        <form id="loginForm">
            <div class="input-group">
                <input type="text" id="foreignNumber" placeholder="외국인 번호" />
            </div>

            <div class="input-group">
                <input type="password" id="password" placeholder="비밀번호" />
            </div>

            <button type="submit" class="login-button">로그인</button>
        </form>

        <div class="signup-link" onclick="handleSignup()">
            비밀번호 생성하기
        </div>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const foreignNumber = document.getElementById('foreignNumber').value;
            const password = document.getElementById('password').value;
            
            if (foreignNumber && password) {
                // 로그인 성공 - 다음 페이지로 이동
                showMainPage();
            } else {
                alert('외국인 번호와 비밀번호를 입력해주세요.');
            }
        });

        function handleSignup() {
            alert('비밀번호 생성 페이지로 이동합니다.');
        }

        function showMainPage() {
            document.body.innerHTML = `
                <div style="display: flex; justify-content: center; align-items: center; min-height: 100vh; flex-direction: column; font-family: 'Noto Sans KR', sans-serif;">
                    <h1 style="color: #A8D5F7; font-size: 48px; margin-bottom: 20px;">환영합니다!</h1>
                    <p style="font-size: 20px; color: #666;">돔돔 메인 페이지입니다.</p>
                    <p style="font-size: 16px; color: #999; margin-top: 10px;">로그인에 성공했습니다.</p>
                </div>
            `;
        }
    </script>
