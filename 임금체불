    <script>
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2000);
        }

        function goHome() {
            showToast('홈 페이지로 이동합니다');
        }

        function makeCall(number) {
            showToast(`${number}로 전화를 겁니다`);
        }

        function showInfo(type) {
            const infoData = {
                '임금체불 정의': {
                    icon: '📋',
                    title: '임금체불이란?',
                    subtitle: '받아야 할 돈을 받지 못한 것',
                    content: `
                        <div class="detail-section">
                            <div class="detail-title">📋 임금체불의 정의</div>
                            <div class="detail-content">
                                사업주가 근로자에게 약속한 임금(월급)을 정해진 날짜에 지급하지 않거나, 일부만 지급하는 것을 말합니다.
                            </div>
                        </div>
                        
                        <div class="detail-section">
                            <div class="detail-title">⚠️ 이런 경우 임금체불입니다</div>
                            <ul class="detail-list">
                                <li>월급날이 지났는데 돈을 주지 않음</li>
                                <li>약속한 금액보다 적게 지급함</li>
                                <li>초과근무 수당을 주지 않음</li>
                                <li>퇴직금을 주지 않음</li>
                                <li>상여금을 주지 않음</li>
                                <li>주휴수당을 주지 않음</li>
                            </ul>
                        </div>
                        
                        <div class="detail-section">
                            <div class="detail-title">⚖️ 법적 보호</div>
                            <div class="detail-content">
                                <strong style="color: #6BA3D4;">체류 자격과 관계없이</strong> 일한 만큼 임금을 받을 권리가 있습니다. 
                                불법체류자라도 일한 만큼의 임금은 법적으로 보호받습니다.
                            </div>
                        </div>
                        
                        <div class="detail-section">
                            <div class="detail-title">⏰ 임금 지급 원칙</div>
                            <ul class="detail-list">
                                <li>매월 1회 이상 일정한 날짜에 지급</li>
                                <li>근로자에게 직접 지급</li>
                                <li>전액을 현금 또는 통장 입금</li>
                                <li>물건이나 상품권으로 대신 지급 불가</li>
                            </ul>
                        </div>
                        
                        <div class="detail-section">
                            <div class="detail-title">🚨 처벌</div>
                            <div class="detail-content">
                                임금을 고의로 체불하면 사업주는 <strong style="color: #dc3545;">3년 이하 징역 또는 3천만원 이하 벌금</strong>에 처해질 수 있습니다.
                            </div>
                        </div>
                    `
                }
            };

            const data = infoData[type];
            if (!data) {
                showToast('상세 정보를 확인합니다');
                return;
            }

            document.getElementById('modalTitle').innerHTML = `${data.icon} ${data.title}`;
            document.getElementById('modalSubtitle').textContent = data.subtitle;
            document.getElementById('modalBody').innerHTML = data.content;
            
            document.getElementById('detailModal').classList.add('show');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            document.getElementById('detailModal').classList.remove('show');
            document.body.style.overflow = 'auto';
        }

        // 모달 외부 클릭 시 닫기
        document.addEventListener('DOMContentLoaded', function() {
            const modal = document.getElementById('detailModal');
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    closeModal();
                }
            });
        });
    </script>
</body>
</html>
